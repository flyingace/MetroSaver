<?xml version='1.0' encoding='utf-8'?>
<widget id="com.flyingacedesign.metrosaver" version="2.0.7" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MetroSaver</name>
    <description>
        Save your time. Save your money.
    </description>
    <author email="support@flyingacedesign.com" href="http://metrosaver.flyingacedesign.com">
        Flying Ace Design
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <platform name="android">
        <icon src="www/img/android/icons/ldpi.png" density="ldpi"/>
        <icon src="www/img/android/icons/mdpi.png" density="mdpi"/>
        <icon src="www/img/android/icons/hdpi.png" density="hdpi"/>
        <icon src="www/img/android/icons/xhdpi.png" density="xhdpi"/>
    </platform>
    <platform name="android">
        <splash src="www/img/android/splash/splash_port_hdpi.9.png" density="port-hdpi"/>
        <splash src="www/img/android/splash/splash_port_ldpi.9.png" density="port-ldpi"/>
        <splash src="www/img/android/splash/splash_port_mdpi.9.png" density="port-mdpi"/>
        <splash src="www/img/android/splash/splash_port_xhdpi.9.png" density="port-xhdpi"/>
        <splash src="www/img/android/splash/splash_port_xxhdpi.9.png" density="port-xxhdpi"/>
    </platform>
    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="www/img/ios/icons/icon-60@3x.png" width="180" height="180" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="www/img/ios/icons/icon-60.png" width="60" height="60" />
        <icon src="www/img/ios/icons/icon-60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="www/img/ios/icons/icon-76.png" width="76" height="76" />
        <icon src="www/img/ios/icons/icon-76@2x.png" width="152" height="152" />
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="www/img/ios/icons/icon-40.png" width="40" height="40" />
        <icon src="www/img/ios/icons/icon-40@2x.png" width="80" height="80" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/img/ios/icons/icon.png" width="57" height="57" />
        <icon src="www/img/ios/icons/icon@2x.png" width="114" height="114" />
        <!-- iPad -->
        <icon src="www/img/ios/icons/icon-72.png" width="72" height="72" />
        <icon src="www/img/ios/icons/icon-72@2x.png" width="144" height="144" />
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="www/img/ios/icons/icon-small.png" width="29" height="29" />
        <icon src="www/img/ios/icons/icon-small@2x.png" width="58" height="58" />
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="www/img/ios/icons/icon-50.png" width="50" height="50" />
        <icon src="www/img/ios/icons/icon-50@2x.png" width="100" height="100" />
    </platform>
    <platform name="ios">
        <!-- images are determined by width and height. The following are supported -->
        <splash src="www/img/ios/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="www/img/ios/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="www/img/ios/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="www/img/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="www/img/ios/splash/Default-568h~iphone.png" width="320" height="568"/>
        <splash src="www/img/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="www/img/ios/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="www/img/ios/splash/Default-736h.png" width="1242" height="2208"/>
    </platform>
    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" />
        <param name="onload" value="true" />
    </feature>
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000"/>
    <preference name="Orientation" value="portrait"/>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="true" />
</widget>
